! ------------------------------------------------------- Rofi
rofi.terminal: urxvt
rofi.lines:		5


! fullscreen padding
!rofi.width:		100
!rofi.padding:	280

!box padding
rofi.width:		40
rofi.padding:	35


rofi.eh:		2
rofi.opacity:	90
rofi.bw:		2


rofi.bc:		#282828
rofi.bg:		#282828
rofi.fg:		#458588

rofi.hlbg:		#282828
rofi.hlfg:		#83a598

rofi.font:		Fira Mono 14

! ------------------------------------------------------- URxvt
URxvt*termName: rxvt-256color
URxvt*xftAntialias: true

URxvt*cursorColor:	#fbf1c7
URxvt*colorUL: #366060
URxvt*underlineColor: #dfaf8f

URxvt*letterSpace: -1

URxvt*transparent: false
!URxvt*shading: 25

URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/google-chrome-stable
URxvt.matcher.button: 1

URxvt*loginShell: true
URxvt*cursorBlink: true
URxvt*pointerBlank: true
URxvt*pointerBlankDelay: 2
URxvt*scrollBar: false
URxvt*secondaryScroll: true
URxvt*borderless: true
